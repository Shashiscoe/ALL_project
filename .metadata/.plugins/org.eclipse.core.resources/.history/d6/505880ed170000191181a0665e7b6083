package packjage1;

import java.util.Scanner;

/*
 * Enter number:
5
     *
    ***
   *****
  *******
 *********
  *******
   *****
    ***
     *
     **/

public class Pattern4 {

	public static void main(String[] args) {
		System.out.println("Enter number:");
		Scanner scan=new Scanner(System.in);
		int n=scan.nextInt();
		for(int i=0;i<n;i++)
		{
			for(int j=i;j<n;j++)
			{
				System.out.print(" ");
			}
			for(int k=1;k<=(i*2+1);k++)
			{
				System.out.print("*");
			}
			System.out.println();
		}
		for(int i=n-2;i>=0;i--)
		{
			for(int j=i;j<n;j++)
			{
				System.out.print(" ");
			}
			for(int k=1;k<=(i*2+1);k++)
			{
				System.out.print("*");
			}
			System.out.println();
		}
	}

}
